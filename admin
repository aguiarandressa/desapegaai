<body>
<div class="container">
  <h1>üõ†Ô∏è Painel Admin ‚Ä¢ DesapegaAi</h1>

  <!-- DONAS -->
  <div class="card">
    <h2>Cadastrar Dona</h2>

    <label>ID</label>
    <input id="donaId">

    <label>Nome</label>
    <input id="donaNome">

    <label>WhatsApp</label>
    <input id="donaWhats">

    <button onclick="addDona()">Salvar Dona</button>
  </div>

  <!-- PRODUTO -->
  <div class="card">
    <h2>Cadastrar Produto</h2>

    <label>ID</label>
    <input id="prodId">

    <label>Nome</label>
    <input id="prodNome">

    <label>Categoria</label>
    <input id="prodCat">

    <label>Subcategoria</label>
    <input id="prodSub">

    <label>Pre√ßo</label>
    <input id="prodPreco" type="number">

    <label>Dona (ID)</label>
    <input id="prodDona">

    <label>Imagem (nome do arquivo)</label>
    <input id="prodImg">

    <button onclick="addProduto()">Salvar Produto</button>
  </div>

  <!-- SA√çDA JSON -->
  <div class="card">
    <h2>üìÑ JSON Gerado</h2>
    <pre id="output">{}</pre>
  </div>
</div>

<script>
let donas = [];
let produtos = [];

function addDona() {
  donas.push({
    id: donaId.value,
    nome: donaNome.value,
    whatsapp: donaWhats.value
  });
  render();
}

function addProduto() {
  produtos.push({
    id: prodId.value,
    nome: prodNome.value,
    categoria: prodCat.value,
    subcategoria: prodSub.value,
    preco: Number(prodPreco.value),
    donaId: prodDona.value,
    imagens: [prodImg.value],
    ativo: true
  });
  render();
}

function render() {
  document.getElementById('output').textContent = JSON.stringify({
    donas,
    produtos
  }, null, 2);
}
</script>
